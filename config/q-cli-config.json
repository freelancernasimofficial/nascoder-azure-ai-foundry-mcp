{
  "mcpServers": {
    "azure-ai-foundry": {
      "command": "node",
      "args": [
        "/Users/yourusername/azure-ai-foundry-mcp/dist/server.js"
      ],
      "env": {
        "AZURE_AI_INFERENCE_ENDPOINT": "https://rg-name.services.ai.azure.com/models",
        "AZURE_AI_INFERENCE_API_KEY": "Your api key",
        "AZURE_OPENAI_ENDPOINT": "https://rgname.openai.azure.com/",
        "AZURE_AI_SERVICES_ENDPOINT": "https://rgname.cognitiveservices.azure.com/",
        "AZURE_SPEECH_STT_ENDPOINT": "https://swedencentral.stt.speech.microsoft.com",
        "AZURE_SPEECH_TTS_ENDPOINT": "https://swedencentral.tts.speech.microsoft.com",
        "AZURE_REGION": "ex: swedencentral",
        "MCP_SERVER_NAME": "azure-ai-foundry-mcp",
        "MCP_SERVER_VERSION": "1.0.0"
      }
    }
  }
}
